<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">



	<context:component-scan base-package="it.csi.stacore.staon.util" />
	
	
	<bean id="applicationContextManager" 
		class="it.csi.stacore.staon.util.ApplicationContextManager" lazy-init="false" />
	

	<!-- Process annotations on registered beans like @Autowired... -->
	<context:annotation-config />
	

	<!-- Dozer -->
	<bean id="mapper" class="org.dozer.DozerBeanMapper">
	    <property name="mappingFiles">
	        <list>
	            <value>dozer/dozer-bean-mappings.xml</value>
	        </list>
	    </property>
	</bean>
















</beans>